{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<style>
    form {
        border: black solid 1px;
        border-radius: 5px;
    }

    .formulaire{
        width: 50%; /* Réduit la largeur du formulaire */
    }

    .formulaire p{
        margin-top : 2%;
    }

    .container {
        display: flex;
        justify-content: space-between; /* Place les éléments aux extrémités gauche et droite */
        align-items: center; /* Aligne les éléments verticalement au centre */
    }

    .logo {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 40%; /* Réduit la largeur du logo */
        height: auto;
        max-height: 80vh; /* Assure que l'image ne dépasse pas 80% de la hauteur de la fenêtre */
    }

    .logo img {
        width: 100%; /* Image occupe toute la largeur du conteneur */
        height: auto; /* Garde les proportions */
        max-width: 100%; /* Empêche l'image de dépasser le conteneur */
        max-height: 80vh; /* Empêche l'image de dépasser 80% de la hauteur de la fenêtre */
    }

    .mb-3, button {
        margin: 50px;
    }

    .btn  {
        background-color: #ffcc00;
        border: #ffcc00;
        font-weight: bold;
    }

    .princiaplContenair{
        margin : auto;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    #marginTopNull{
        margin-top : 0px;
    }

    .alert{
        margin-bottom : 5%;
    }

    .dernierElement{
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        width: 50%;
    }

</style>

<div class = "princiaplContenair">

    <h1>Bienvenue chez les meilleurs Restaurateurs de BudgEat</h1>

    <!-- Conteneur Flexbox pour le logo à gauche et le formulaire à droite -->
    <div class="container">
        <!-- Logo à gauche -->
        <div class="logo">
            <img src="/assets/logo-budgeat.png" alt="Logo">
        </div>

        <div class = "formulaire">

        <!-- Formulaire à droite -->
        <form method="POST" action="{{ path('app_login_restaurants') }}">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Adresse Mail</label>
                <input type="email" class="form-control" id="exampleInputEmail1" name="mail" aria-describedby="emailHelp" required>
                <div id="emailHelp" class="form-text">Votre adresse mail restera confidentielle.</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Mot de passe</label>
                <input type="password" class="form-control" id="exampleInputPassword1" name="mdp" required>
            </div>

            <button type="submit" class="btn btn-primary" id="marginTopNull">Se connecter</button>

            <!-- Affichage des messages d'erreur -->
            {% if error %}
                <div class="mb-3" id="marginTopNull">
                    <div class="alert alert-danger">
                        <!--{{ error.messageKey|trans(error.messageData, 'security') }}-->
                        E-mail ou mot de passe incorrects.
                    </div>
                </div>
            {% endif %}

        </form>

        <p>Si vous n'êtes toujours pas inscrit, veuillez cliquez <a href="/restaurants/inscription" class="btn-signup"> ici</a></p>
        
        </div>

    </div>

</div>

{% endblock %}
