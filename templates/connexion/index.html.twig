{% extends 'base.html.twig' %}

{% block title %}Connexion Clients{% endblock %}

{% block body %}
<style>
    form {
        margin: 2%;
        border: 1px solid black;
        border-radius: 5px;
        width: 50%; 
        padding: 20px;
        background-color: #f9f9f9;
    }

    .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap; /* Permet l'adaptation sur petits écrans */
    }

    .logo {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 40%;
        max-height: 80vh;
    }

    .logo img {
        width: 100%; 
        height: auto;
        max-height: 80vh; 
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn {
        background-color: #ffcc00;
        border: 1px solid #ffcc00;
        font-weight: bold;
        padding: 10px 20px;
        cursor: pointer;
    }

    .btn:hover {
        background-color: #ffb400;
        border-color: #ffb400;
    }

    .main-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Prend toute la hauteur de la fenêtre */
        margin: 0; /* Supprime les marges par défaut */
        text-align: center;
    }

    .alert {
        margin-bottom: 20px;
    }

    p {
       margin-right: 150px;
    }

    @media (max-width: 768px) {
        .container {
            flex-direction: column; /* Aligne les éléments verticalement sur petits écrans */
        }

        form {
            width: 90%; /* Ajuste la largeur du formulaire sur petits écrans */
        }

        .logo {
            width: 70%;
            margin-bottom: 20px;
        }
    }
</style>

<div class="main-container">
    <h1>Connectez-vous pour découvrir les meilleures offres</h1>

    <div class="container">
        <div class="logo">
            <a href="/" ></p><img src="/assets/logo-budgeat.png" alt="Logo de l'application"></a>
        </div>


      <!-- Formulaire à droite -->
      <form method="POST" action="{{ path('app_login_clients') }}">
          <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Adresse Mail</label>
              <input type="email" class="form-control" id="exampleInputEmail1" name="mail" aria-describedby="emailHelp" required>
              <div id="emailHelp" class="form-text">Votre adresse mail restera confidentielle.</div>
          </div>
          <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Mot de passe</label>
              <input type="password" class="form-control" id="exampleInputPassword1" name="mdp" required>
          </div>
          <button type="submit" class="btn btn-primary" id="marginTopNull">Se connecter</button>

            <!-- Affichage des messages d'erreur -->
            {% if error %}
                <div class="mb-3" id="marginTopNull">
                    <div class="alert alert-danger">
                        <!--{{ error.messageKey|trans(error.messageData, 'security') }}-->
                        E-mail ou mot de passe incorrects.
                    </div>
                </div>
            {% endif %}
      </form>

  </div>


{% endblock %}