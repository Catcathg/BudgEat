<div class="navbar">
    <div class="logo">
        <a href="/"><img src="/assets/logo.png" alt="BudgEat Logo"></a >
    </div>
    <ul>
        <li><a href="/restaurants">Restaurants</a ></li>
        <li><a href="/contact">Contact</a ></li>
    </ul>
</div>

<div class="restaurants">
    <h1>Restaurants pour un budget maximum de {{ budget }} €</h1>
    <div class="restaurant-list">
        {% for restaurant in restaurants %}
            <div class="restaurant-card">
                <img src="{{ asset('assets/' ~ restaurant.image) }}" alt="{{ restaurant.nom }}">
                <h3>{{ restaurant.nom }}</h3>
                <p>Prix minimum : {{ restaurant.PrixMinimum}} €</p >
                <p>{{ restaurant.rating }} ★ - {{ restaurant.distance }}</p >
                <div class="card-buttons">
                    <button>Menu</button>
                    <button>Trajet</button>
                </div>
            </div>
        {% else %}
            <p>Aucun restaurant ne correspond à ce budget.</p >
        {% endfor %}
    </div>
</div>

